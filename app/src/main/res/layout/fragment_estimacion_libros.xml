<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Estimación"
                android:textSize="28dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Estimando cantidades"
                android:textSize="17dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:textColor="#849095"
                />

            <TextView
                android:id="@+id/pregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginTop="15dp"
                android:text="Estima la cantidad de cuadernos y seleciona tu respuesta."
                />



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/seleccion_primero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/primero"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:textColor="@color/black"
                        android:text="Hay menos de 30"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@drawable/circle_transparente"
                        android:textSize="15dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/seleccion_segundo"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/segundo"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:textColor="@color/black"
                        android:text="Hay más de 30"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/circle_transparente"
                        android:textSize="15dp"/>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:weightSum="6"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/libross"/>

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >



        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/validar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="Validar"
        android:textSize="20dp" />


</RelativeLayout>