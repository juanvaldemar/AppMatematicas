<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container">
    <ImageView
        android:id="@+id/cerrar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/com_facebook_close"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Estimación"
                android:textSize="28dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Estrategia de cálculo"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:textColor="#849095"
                />

            <TextView
                android:id="@+id/pregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginTop="15dp"
                android:text="David ha pescado 44 peces anchovechas y 52 peces pejerrey. ¿Cuantos peces ha pescado en total?"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="458dp"
                android:weightSum="6"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pescador"/>

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/validar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"

        android:gravity="center"
        android:padding="0dp"
        android:text="Validar"
        android:textSize="20dp" />


</RelativeLayout>