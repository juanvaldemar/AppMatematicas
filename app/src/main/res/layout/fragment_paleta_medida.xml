<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/container">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cerrar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/com_facebook_close"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Logitudes"
                android:textSize="28dp"
                android:layout_gravity="left"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Estimando cantidades"

                android:layout_gravity="center"


                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="#255CE6"
                android:textStyle="bold"
                />





            <TextView
                android:id="@+id/pregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginTop="15dp"
                android:text="¿Cuánto crees que mida una paleta de chocolate?"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:weightSum="6"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:background="@drawable/helados"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/seleccion_primero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="center">
                    <TextView
                        android:id="@+id/primero"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:textColor="@color/black"
                        android:text="Más de 1 metro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@drawable/circle_transparente"
                        android:textSize="18dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/seleccion_segundo"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/segundo"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:textColor="@color/black"
                        android:text="Más de 80cm"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/circle_transparente"
                        android:textSize="18dp"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/seleccion_tercero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="center">
                    <TextView
                        android:id="@+id/tercero"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:textColor="@color/black"
                        android:text="Menos de 1 metro"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@drawable/circle_transparente"
                        android:textSize="18dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/seleccion_cuarto"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/cuarto"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:textColor="@color/black"
                        android:text="Menos de 80cm"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/circle_transparente"
                        android:textSize="18dp"/>

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginBottom="100dp"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/contador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="1"
            android:editable="false"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:textColor="#849095"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="/10"
            android:textSize="30dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:textColor="#849095"
            />
    </LinearLayout>



    <Button
        android:id="@+id/validar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"

        android:gravity="center"
        android:padding="0dp"
        android:text="Validar"
        android:textSize="20dp" />


</RelativeLayout>