<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.resultado.ModuloIVFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".3"
        android:background="@drawable/icons"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/resultado"
        android:layout_margin="40dp"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Hola, en este módulo veremos los siguientes ejercicios."
            android:textColor="#DA1919"
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ejercicios con operaciones."
            android:textColor="#255CE6"
            android:textStyle="bold"

            android:textSize="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ejercicios de expresiones númericas."
            android:textColor="#255CE6"
            android:textSize="20dp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="¡Vamos, tú puedes!"
            android:textColor="#5DA118"
            android:textSize="20dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/iniciar"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Iniciar."
            android:textColor="#255CE6"
            android:textSize="30dp"
            android:textStyle="bold"

            />


        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="80dp"
            android:gravity="center"
            android:text="■" />


        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/salir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Salir" />




    </LinearLayout>


</RelativeLayout>